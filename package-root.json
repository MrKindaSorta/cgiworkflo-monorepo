{
  "name": "cgiworkflo-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "CGIWorkFlo - After Action Reports Management System (Monorepo)",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev:*\"",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "build": "npm run build --workspaces",
    "build:frontend": "npm run build --workspace=frontend",
    "build:backend": "npm run build --workspace=backend",
    "deploy:frontend": "npm run deploy --workspace=frontend",
    "deploy:backend": "npm run deploy --workspace=backend",
    "deploy": "npm run deploy:backend && npm run deploy:frontend",
    "lint": "npm run lint --workspaces",
    "test": "npm run test --workspaces",
    "clean": "rm -rf node_modules frontend/node_modules backend/node_modules frontend/dist backend/dist .wrangler"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
